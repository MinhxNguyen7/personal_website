---
import { AstroSeo } from "@astrolib/seo";

const SITE_NAME = "Minh Nguyen";
const SITE_DESCRIPTION = "Minh Nguyen's personal website, showcasing my projects, experience, and writings.";
const DOMAIN = "https://minh-nguyen.tech";
---

<AstroSeo
  title={SITE_NAME}
  description={SITE_DESCRIPTION}
  canonical={DOMAIN}
  openGraph={{
    url: {DOMAIN},
    title: {SITE_NAME},
    description: {SITE_DESCRIPTION},
    site_name: {SITE_NAME},
    type: "website",
    locale: "en_US",
  }}
/>
