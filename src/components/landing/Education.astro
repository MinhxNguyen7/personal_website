---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import SectionEntry, { Props as LandingCardProps } from "@/components/SectionEntry.astro";

const education_entries: Array<LandingCardProps> = [
  {
    time: "2023 - 2025",
    title: "B.S. in Computer Science",
    subtitle: "University of California, Irvine",
    description: `
      Learned fundamentals of computer science and specialized in intelligent systems.\n
      Led 50+ student developers as Projects Committee Co-Chair of ICS Student Council.\n
      Minors in Informatics and Sociology.
    `,
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-800"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text tag="h2" variant="textSM" class="text-base-900 dark:text-white lg:pt-2">
          Education
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {education_entries.map((entry, index) => <SectionEntry {...entry} />)}
      </div>
    </div>
  </Wrapper>
</section>
