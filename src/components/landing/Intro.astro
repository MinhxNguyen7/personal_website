---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const { name, title, description } = Astro.props;
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b pb-8 pt-24 border-base-200 dark:border-base-800"
    >
      <div>
        <Text
          tag="h1"
          variant="textSM"
          class="font-medium text-base-900 dark:text-white"
        >
          {name}
        </Text>

        <Text
          tag="p"
          variant="textXS"
          class="text-base-600 dark:text-base-500"
        >
          {title}
        </Text>
        
      </div>
      <Text
        tag="p"
        variant="textSM"
        class="text-base-600 dark:text-base-500 lg:col-span-2"
      >
        {description}
      </Text>
    </div>
  </Wrapper>
</section>
