---
import Text from "@/components/fundations/elements/Text.astro";

interface Props {
  link: string;
  title: string;
  description: string;
  time: string;
}

const { link, title, description, time } = Astro.props;

const isLink = link.length > 0 && link !== "#_";
const isExternalLink = isLink && !link.startsWith("/");
---
<a
  href={isLink ? link : null} 
  target={isExternalLink ? "_blank" : null} 
  rel={isExternalLink ? "noopener noreferrer" : null}
>
  <article
    class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start"
  >
    <div class="lg:col-span-2">
      <Text
        tag="h3"
        variant="textSM"
        class="font-medium tracking-tight text-base-900 dark:text-white"
      >
        <div
          class="absolute -inset-x-1 -inset-y-4 z-0 scale-95 bg-base-50 dark:bg-base-800/20 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 -inset-x-4 rounded-2xl duration-300"
        >
        </div>
        <span class="relative z-10">
          {title}
        </span>
      </Text>
      <Text
        tag="p"
        variant="textXS"
        class="relative z-10 mt-1 text-base-600 dark:text-base-500"
      >
        {description}
      </Text>
    </div>
    <Text
      tag="p"
      variant="textXS"
      class="relative z-10 flex items-center text-sm text-base-600 dark:text-base-400 lg:ml-auto"
    >
      <time datetime={time}> {time}</time>
    </Text>
  </article>
</a>
