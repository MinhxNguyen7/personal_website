---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import LandingCard from "./SectionEntry.astro";

const data = [
  {
    period: "2023–2025",
    title: "Swiss Modernism Showcase",
    description: `Curated and designed an exhibition highlighting the evolution of Swiss modernism in graphic design, showcasing iconic works and their influence on contemporary design.`,
    location: "Zurich, Switzerland",
    link: "#_",
  },
  {
    period: "2020–2023",
    title: "Helvetica Redefined",
    description: `Redesigned the Helvetica type specimen to include modern variations and applications. The work explored the typeface's versatility and its legacy in Swiss design.`,
    location: "Basel, Switzerland",
    link: "#_",
  },
  {
    period: "2017–2020",
    title: "Swiss Design Principles",
    description: `Developed educational materials and workshops on the core principles of Swiss design, focusing on grid systems, typography, and minimalist aesthetics.`,
    location: "Geneva, Switzerland",
    link: "#_",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-800"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text tag="h2" variant="textSM" class="text-base-900 dark:text-white">
          Work Experience
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((work, index) => (
            <LandingCard
              link={work.link}
              title={work.title}
              description={work.description}
              time={work.period}
            />
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
