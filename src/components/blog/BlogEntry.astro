---
import SectionEntry from "@/components/SectionEntry.astro";

// Content
const { link, title, description, pubDate } = {
  link: "/blog/posts/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  description: Astro.props.post.data.description,
  pubDate: new Date(Astro.props.post.data.pubDate)
    .toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "2-digit",
    }
  )
};
---

<SectionEntry
  {link}
  {title}
  {description}
  time={pubDate}
/>
